<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.axelkoolhaas</groupId>
        <artifactId>frida-java-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>frida-java</artifactId>
    <packaging>jar</packaging>

    <name>Frida Java</name>
    <description>Java bindings for Frida dynamic instrumentation toolkit</description>

    <properties>
        <native.compiler>clang</native.compiler>
        <native.linker>clang</native.linker>
        <exec-maven-plugin.version>3.1.0</exec-maven-plugin.version>
        <native-maven-plugin.version>1.0-M1</native-maven-plugin.version>
        <devkit.skip>false</devkit.skip>
        <jni.skip>false</jni.skip>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.14.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <!-- Profile to skip fetching JNI headers if present -->
        <profile>
            <id>jni-exists</id>
            <activation>
                <file>
                    <exists>${project.basedir}/jni-headers</exists>
                </file>
            </activation>
            <properties>
                <jni.skip>true</jni.skip>
            </properties>
        </profile>

        <!-- Profile to skip fetching devkits if present -->
        <profile>
            <id>devkit-exists</id>
            <activation>
                <file>
                    <exists>${project.basedir}/frida-devkit</exists>
                </file>
            </activation>
            <properties>
                <devkit.skip>true</devkit.skip>
            </properties>
        </profile>

        <!-- Profiles for building native libraries for different OSes -->
        <profile>
            <id>macos</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <!-- Compile macOS native code -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>native-maven-plugin</artifactId>
                        <version>${native-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>compile-macos-x86_64</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>link</goal>
                                </goals>
                                <configuration>
                                    <compilerProvider>generic-classic</compilerProvider>
                                    <compilerExecutable>${native.compiler}</compilerExecutable>
                                    <linkerExecutable>${native.linker}</linkerExecutable>
                                    <sources>
                                        <source>
                                            <directory>src/main/native</directory>
                                            <fileNames>
                                                <fileName>_frida_java.c</fileName>
                                            </fileNames>
                                        </source>
                                    </sources>
                                    <compilerStartOptions>
                                        <compilerStartOption>-fPIC</compilerStartOption>
                                        <compilerStartOption>-arch</compilerStartOption>
                                        <compilerStartOption>x86_64</compilerStartOption>
                                        <compilerStartOption>-I${project.basedir}/jni-headers/macos</compilerStartOption>
                                        <compilerStartOption>-I${project.basedir}/frida-devkit/macos-x86_64</compilerStartOption>
                                    </compilerStartOptions>
                                    <linkerFinalName>libfrida-java-x86_64</linkerFinalName>
                                    <linkerFinalNameExt>dylib</linkerFinalNameExt>
                                    <attach>false</attach>
                                    <compilerOutputDirectory>${project.build.directory}/objs/x86_64</compilerOutputDirectory>
                                    <linkerStartOptions>
                                        <linkerStartOption>-shared</linkerStartOption>
                                        <linkerStartOption>-arch</linkerStartOption>
                                        <linkerStartOption>x86_64</linkerStartOption>
                                        <linkerStartOption>-L${project.basedir}/frida-devkit/macos-x86_64</linkerStartOption>
                                        <linkerStartOption>-lfrida-core</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>Foundation</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>AppKit</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>IOKit</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>Security</linkerStartOption>
                                        <linkerStartOption>-lbsm</linkerStartOption>
                                        <linkerStartOption>-ldl</linkerStartOption>
                                        <linkerStartOption>-lm</linkerStartOption>
                                        <linkerStartOption>-lresolv</linkerStartOption>
                                        <!-- suppress "ld: warning: alignment (1) of atom is too small and may result in unaligned pointers" -->
                                        <linkerStartOption>-Wl,-w</linkerStartOption>
                                    </linkerStartOptions>
                                </configuration>
                            </execution>
                            <execution>
                                <id>compile-macos-arm64</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>compile</goal>
                                    <goal>link</goal>
                                </goals>
                                <configuration>
                                    <compilerProvider>generic-classic</compilerProvider>
                                    <compilerExecutable>${native.compiler}</compilerExecutable>
                                    <linkerExecutable>${native.linker}</linkerExecutable>
                                    <sources>
                                        <source>
                                            <directory>src/main/native</directory>
                                            <fileNames>
                                                <fileName>_frida_java.c</fileName>
                                            </fileNames>
                                        </source>
                                    </sources>
                                    <compilerStartOptions>
                                        <compilerStartOption>-fPIC</compilerStartOption>
                                        <compilerStartOption>-arch</compilerStartOption>
                                        <compilerStartOption>arm64</compilerStartOption>
                                        <compilerStartOption>-I${project.basedir}/jni-headers/macos</compilerStartOption>
                                        <compilerStartOption>-I${project.basedir}/frida-devkit/macos-arm64</compilerStartOption>
                                    </compilerStartOptions>
                                    <linkerFinalName>libfrida-java-arm64</linkerFinalName>
                                    <linkerFinalNameExt>dylib</linkerFinalNameExt>
                                    <attach>false</attach>
                                    <compilerOutputDirectory>${project.build.directory}/objs/arm64</compilerOutputDirectory>
                                    <linkerStartOptions>
                                        <linkerStartOption>-shared</linkerStartOption>
                                        <linkerStartOption>-arch</linkerStartOption>
                                        <linkerStartOption>arm64</linkerStartOption>
                                        <linkerStartOption>-L${project.basedir}/frida-devkit/macos-arm64</linkerStartOption>
                                        <linkerStartOption>-lfrida-core</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>Foundation</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>AppKit</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>IOKit</linkerStartOption>
                                        <linkerStartOption>-framework</linkerStartOption>
                                        <linkerStartOption>Security</linkerStartOption>
                                        <linkerStartOption>-lbsm</linkerStartOption>
                                        <linkerStartOption>-ldl</linkerStartOption>
                                        <linkerStartOption>-lm</linkerStartOption>
                                        <linkerStartOption>-lresolv</linkerStartOption>
                                    </linkerStartOptions>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Create fat binary -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>${exec-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>create-universal-binary</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>lipo</executable>
                                    <workingDirectory>${project.build.directory}</workingDirectory>
                                    <arguments>
                                        <argument>-create</argument>
                                        <argument>-output</argument>
                                        <argument>libfrida-java.dylib</argument>
                                        <argument>libfrida-java-x86_64.dylib</argument>
                                        <argument>libfrida-java-arm64.dylib</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

